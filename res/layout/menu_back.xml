<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/title_bar_height" 
    android:background="@color/bg_title"
    android:id="@+id/menu_back_construct">
    <ImageView 
	    android:id="@+id/iv_back_pic"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:src="@drawable/menu_back"
	    android:layout_alignParentLeft="true"
	    android:scaleType="center"
	    android:contentDescription="@null"
	    android:layout_marginLeft="@dimen/title_bar_badeg_margin_left"/>

    <TextView
        android:id="@+id/tv_back_notice"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="3dp"
        android:gravity="center"
        android:text="@string/title_bar_back_text" 
        android:textColor="@color/text_color_back_title_bar"
        android:textSize="@dimen/title_bar_text_size"
        android:layout_toRightOf="@id/iv_back_pic"
        />

</RelativeLayout>
